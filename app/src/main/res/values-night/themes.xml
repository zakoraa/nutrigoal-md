<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Nutrigoal" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>
        <item name="android:windowBackground">@color/background</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>

        <item name="android:fontFamily">@font/poppinsregular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:includeFontPadding">false</item>

        <item name="android:scrollbars">none</item>
    </style>

    <style name="Theme.Nutrigoal" parent="Base.Theme.Nutrigoal" />

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#1B99D3</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/nutrigoal_logo_splash</item>
        <item name="postSplashScreenTheme">@style/Theme.Nutrigoal</item>
    </style>

    <style name="TextTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppinsbold</item>
    </style>

    <style name="TextHeading1" parent="TextTitle">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/poppinsmedium</item>
    </style>

    <style name="TextHeading2">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppinsregular</item>
    </style>

    <style name="TextLabel" parent="TextHeading1">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextPlaceholder">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="fontFamily">@font/poppinsregular</item>
    </style>

    <style name="TextOnButton">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/onPrimary</item>
        <item name="fontFamily">@font/poppinsmedium</item>
    </style>

    <style name="BottomNavActiveIndicatorStyle" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:shape">oval</item>
        <item name="android:width">40dp</item>
        <item name="android:height">40dp</item>
        <item name="android:color">@color/primary</item>
    </style>

</resources>